<div class="card">
  <!-- Card header -->
  <div class="card-header d-flex align-items-center justify-content-between">
    <h3 class="mb-0">プロフィール</h3>
    <% if current_user.following?(@user) %>
      <%= link_to 'フォローを外す', user_relationships_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class:"btn-sm btn-success" %>
    <% end %>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center mb-4 mb-lg-0">
        <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
        <%= link_to follows_user_path(@user) do %>
          <h6>フォロー<%= @following_users.count %></h6>
        <% end %>&nbsp;&nbsp;
        <%= link_to followers_user_path(@user) do %>
          <h6>フォロワー<%= @follower_users.count %></h6>
        <% end %>
        <div class="ms-3">
          <h4 class="mb-3"><%= @user.name %></h4>
          <p class="mb-0"><%= @user.profile %></p>
          <p class="mb-0">趣味: <%= @user.hobby %></p>
        </div>
      </div>
    </div>
  </div>
</div>